<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Rotating Messages</title>
  <style>
    body {
      background-color: #222;
      color: white;
      font-family: Arial, sans-serif;
      text-align: center;
      padding-top: 20vh;
      font-size: 3em;
    }
    a {
      color: #00f;
      text-decoration: none;
    }
    a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <a id="message" href="#" target="_blank"></a>

  <script>
    const messages = [
      {
        text: "Support the 2025 Annual Catholic Appeal",
        url: "https://archseattle.org/give-serve/giving-opportunities/annual-catholic-appeal/aca-2025/"
      },
      {
        text: "Read the latest St. Edward parish bulletin",
        url: "https://parishesonline.com/publication-page/st-edward-church-98118?selectedPublication=https://container.parishesonline.com/bulletins/05/1502/20250518B.pdf"
      },
      {
        text: "Visit our parish homepage",
        url: "https://stedwardparish.net" // Optional third message â€” update or replace as needed
      }
    ];

    let currentIndex = 0;
    const messageEl = document.getElementById("message");

    function showMessage(index) {
      messageEl.textContent = messages[index].text;
      messageEl.href = messages[index].url;
    }

    function rotateMessages() {
      showMessage(currentIndex);
      currentIndex = (currentIndex + 1) % messages.length;
    }

    // Initial display and start rotation
    rotateMessages();
    setInterval(rotateMessages, 10000); // rotate every 10 seconds
  </script>
</body>
</html>
