<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Rotating Web Pages</title>
  <style>
    html, body {
      margin: 0;
      padding: 0;
      overflow: hidden;
      height: 100%;
    }
    iframe {
      width: 100vw;
      height: 100vh;
      border: none;
    }
  </style>
</head>
<body>
  <iframe id="rotatingFrame" src=""></iframe>

  <script>
    const urls = [
      "https://archseattle.org/give-serve/giving-opportunities/annual-catholic-appeal/aca-2025/",
      "https://parishesonline.com/publication-page/st-edward-church-98118?selectedPublication=https://container.parishesonline.com/bulletins/05/1502/20250518B.pdf"
    ];

    let currentIndex = 0;
    const frame = document.getElementById("rotatingFrame");

    function rotatePages() {
      frame.src = urls[currentIndex];
      currentIndex = (currentIndex + 1) % urls.length;
    }

    rotatePages(); // Show the first page immediately
    setInterval(rotatePages, 15000); // Rotate every 15 seconds
  </script>
</body>
</html>
